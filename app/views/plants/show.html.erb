<!-- Sub nav -->
<div class="nav-control">
    <div class="nav-control-container">
        <% if @current_user.present? %>
            <li class="menu-item">
                <p class="nav-control-text"><%= @plant.name %></p>
            </li>
            <span class="nav-control-dividers">|</span>
            <li class="menu-item">
                <%= link_to "Edit", edit_plant_path, :class => 'nav-control-link' %>
            </li>
            <li class="menu-item">
                <%= link_to 'Delete', @plant, :method => 'delete', :data => { :confirm => 'Are you sure?' }, :class => 'nav-control-link' %>
            </li>
            <span class="nav-control-dividers">|</span>
        <% end %>
    </div>
</div>

<!-- Content -->
<div class="container">
    <div class="row">
        <div class="col-10 text-center">        
            <% if @plant.image.present? %>
                <%= cl_image_tag @plant.image, :class => 'img-feature' %>
            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-9 text-left">
            <p><span class="span-bold">Name:</span><%= @plant.name %></p>
            <p><span class="span-bold">Species:</span> <%= @plant.species %></p>
            <p><span class="span-bold">Last watered:</span> <%= @plant.last_watered %></p>
            <p><span class="span-bold">Cycle:</span> <%= @plant.cycle %> days</p>
        </div>
    </div>
</div>
