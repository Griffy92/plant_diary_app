<!-- Shows all plants that belong to the user -->

<ul class="nav nav-tabs journal-control">
    <% if @current_user.present? %>
        <li class="nav-item">
            <%= link_to 'New Plant', new_plant_path %>
        </li>
    <% end %>
</ul>

<div class="container text-center">
    <div class="row">
        <div class="col-10">
            <div>
                <% @plants.uniq.each do |plant| %> 
                        <figure class="figure">
                            <% if plant.image.present? %>
                                <%= image_tag plant.image, :class => 'img-thumb' %>
                            <% end %>
                            <figcaption class="figure-caption text-center"><%= link_to plant.name, plant %></figcaption>
                        </figure>
                <% end %>
            </div>
        </div>
    </div>
</div>