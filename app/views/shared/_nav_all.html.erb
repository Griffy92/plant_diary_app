<!-- This is the navigation that exists in every page -->
<div class="masthead">
    <div class="masthead-title">
        <h1>Plant <span>Diary<span></h1>
    </div>
</div>

<nav class="nav-menu">
    <nav class="nav-container">
        <div class="menu-pages">
            <li class="menu-item">
                <%= link_to 'Home', root_path, :class => 'nav-link' %>
            </li>
            <li class="menu-item">
                <a href="#" class="nav-link">About</a>
            </li>
            <% if @current_user.present? %>
            <li class="menu-item">
                <%= link_to "My Journals", journals_path, :class => 'nav-link' %>
            </li>
            <li class="menu-item">
                <%= link_to "My Plants", plants_path, :class => 'nav-link' %>
            </li>
            <% end %>
        </div>
        <div class="menu-user">
            <% if @current_user.present? %>
                <div class="menu-item dropdown">
                    <a href="#" class="nav-link dropdown-btn">
                        Welcome, <%= @current_user.nickname %><span class="down-arrow">&#9660;</span>
                    </a>
                    <div class="dropdown-content">
                        <div class="menu-item">
                            <%= link_to "Log Out", login_path, :method => :delete, :class => 'nav-link' %>
                        </div>
                    </div>
                </div>
            <% else %>
                <li class="menu-item">
                    <%= link_to 'Sign Up!', new_user_path, :class => 'nav-link' %>
                </li>
            <% end %>
        </div>
    </nav>
</nav>
