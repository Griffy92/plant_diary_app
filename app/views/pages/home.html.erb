<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-6">

            <h1 class="display-1">Say No, to plant murder.</h1>

            <p class="mt-3"> 
                <!-- Removes below if user access home page whilst logged in -->
                <% unless @current_user.present? %>
                    Log in below or <%= link_to 'sign up', new_user_path %> to play around with the app.
                <% end %>
            </p>

        </div>
        <div class="col-2"></div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-3">
            <% unless @current_user.present? %>
                <%= render :partial => 'session/new' %>
            <% end %>
        </div>
        <div class="col-2"></div>
    </div>
</div>


