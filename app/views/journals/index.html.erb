<!-- Shows all journals that belong to the user -->
<!-- Sub nav -->
<div class="nav-control">
     <div class="nav-control-container">
        <% if @current_user.present? %>
            <li class="menu-item">
                <%= link_to 'New Journal', new_journal_path, :class => 'nav-control-link' %>
            </li>
        <% end %>
     </div>
</div>
<!-- content -->
<div class="container text-center">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center flex-wrap">
                <% @current_user.journals.each do |journal| %>
                    <figure class="figure">
                        <%= image_tag "greenhouse.jpg", :class => 'figure-img img-fluid rounded img-thumb' %>
                        <figcaption class="figure-caption text-center"><%= link_to journal.name, journal %></figcaption>
                    </figure>
                <% end %>     
            </div>
        </div>
    </div>
</div>
