<!-- Shows all journals that belong to the user -->

<ul class="nav nav-tabs journal-control">
    <% if @current_user.present? %>
        <li class="nav-item">
            <%= link_to 'New Journal', new_journal_path %>
        </li>
    <% end %>
</ul>

<div class="container text-center">
    <div class="row">
        <div class="col-10">
            <div class="plant-item">
                <% @current_user.journals.each do |journal| %>
                    <figure class="figure">
                        <%= image_tag "greenhouse.jpg", :class => 'figure-img img-fluid rounded img-thumb' %>
                        <figcaption class="figure-caption text-center"><%= link_to journal.name, journal %></figcaption>
                    </figure>
                <% end %>     
            </div>
        </div>

        <div class="col-2"></div>
    </div>
</div>
