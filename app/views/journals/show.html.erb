<%# Individual contents of journal i.e. shows plant info  %>
<ul class="nav nav-tabs journal-control">
    <% if @current_user.present? %>
        <li>
            <%= @journal.name %>
        </li>
        |
        <li class="nav-item">
            <%= link_to 'Edit', edit_journal_path, :class => 'text-decoration-none' %>
        </li>
        <li class="nav-item">
            <%= link_to 'Delete', @journal, :method => 'delete', :data => { :confirm => 'Are you sure?' }, :class => 'text-decoration-none' %>
        </li>
        |
        <li class="nav-item">
            <%= link_to 'Add Plant', new_plant_path, :class => 'text-decoration-none' %>
        </li>
    <% end %>
</ul>

<div class="container text-center">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center flex-wrap">
                <% @journal.plants.each do |plant| %>
                    <figure class="figure">
                        <% if plant.image.present? %>
                            <%= link_to cl_image_tag(plant.image, :class => 'img-thumb'), plant %>
                        <% end %>
                        <figcaption class="figure-caption text-center"><%= plant.name %></figcaption>
                    </figure>
                <% end %>  
            </div>
        </div>
    </div>
</div>